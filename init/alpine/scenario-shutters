#!/sbin/openrc-run
command=/usr/local/bin/scenario-shutters
command_args="-log-file=/var/log/eria/${RC_SVCNAME}.log"

conf=/usr/local/etc/eria

pidfile=/var/run/${RC_SVCNAME}.pid
name="ERIA Scenario Shutters Daemon"

description="ERIA Project, Scenario of opening/closing Shutters"

start() {
  ebegin "Starting ${name}"
  start-stop-daemon --background --start --exec \
    env ERIA_CONF_PATH=${conf} \
    ${command} \
    --make-pidfile --pidfile ${pidfile} \
    -- ${command_args} \
  eend $?
}

stop() {
  ebegin "Stopping ${name}"
  start-stop-daemon --stop \
    --exec ${command} \
    --pidfile ${pidfile} \
  eend $?
}
